<!DOCTYPE html>

<html>
	<head>
        <meta charset="utf-8" />
		<meta name="description" content="Idaho Department of Health and Welfare Time, Accounting, and Reporting system">
		<meta name="keywords" content="TARS" />
		<title>@ViewBag.Title</title>
		<link href="@Url.Content("~/Content/template.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	</head>
	<body>
		<div class="container">
			<div id="top">	
					
				<img src="@Url.Content("~/Content/themes/base/images/logo.png")"  id="logo" alt="logo" />
				<table class="nav">
					<tr>
						<td>@Html.ActionLink("Administration", "../Admin/Index/")</TD>
						<td>@Html.ActionLink("Managerial", "../Manager/Index/")</td>
						<td>@Html.ActionLink("User Panel", "../User/Index/")</td>
						<td>@Html.Partial("_LogOnPartial")</td>
					</tr>
				</table>
				<table class="contextMenu">
					<tr>
						<td>
                        <!-- IF LDAP connection says we're a User -->
                        @if (true)
                        {
                            <a href="/TARS/User/viewTimesheet">View Timesheet</a>
                        }
                        <!-- IF LDAP connection says we're a Manager -->
                        @if (false)
                        {
                            <a href="/TARS/Manager/viewTimesheet">View Timesheet</a>
                        }<!-- IF LDAP connection says we're a Admin -->
                        @if (false)
                        {
                            <a href="/TARS/Admin/viewTimesheet">View Timesheet</a>
                        }
                        </TD>
                        <td>
                        <!-- IF LDAP connection says we're a User -->
                        @if (true)
                        {
                            <a href="/TARS/User/searchWorkEffort">Locate Work Effort</a>
                        }
                        <!-- IF LDAP connection says we're a Manager -->
                        @if (false)
                        {
                            <a href="/TARS/Manager/searchWorkEffort">Locate Work Effort</a>
                        }<!-- IF LDAP connection says we're a Admin -->
                        @if (false)
                        {
                            <a href="/TARS/Admin/searchWorkEffort">Locate Work Effort</a>
                        }
                        </td>
					</tr>
				</table>
				<table class="update">
					<tr>
						<td><i>Current Pay Period: </i></td><td><b><font color="ff0000">
                        @Html.Action("getPayPeriod", "User")</font></b></td>
					</tr>
                    
					<tr>
						<td><!--<i>TimeSheet Status:</i></td><td><font color="green"><b>Approved</b></font>--> </td>
					</tr>
				</table>
			</div>

			<div id = "contents">
               <!--<ul id="menu">
                    <li>@Html.Partial("_LogOnPartial")</li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>-->
				@RenderBody()
			</div>
		</div>

	</body>
</html>
