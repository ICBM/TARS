@model IEnumerable<TARS.Models.WorkEffort>

@{
    ViewBag.Title = "searchWorkEffort";
}

<h2>searchWorkEffort</h2>

<p>
    @Html.ActionLink("Create New", "addWorkEffort")
</p>
<table>
    <tr>
        <th>
            PcaCode
        </th>
        <th>
            StartDate
        </th>
        <th>
            EndDate
        </th>
        <th>
            Description
        </th>
        <th>
            Comments
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pcaCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comments)
        </td>

        <td>
            @Html.ActionLink("Edit", "editWorkEffort", new { id=item.ID }) |
            @Html.ActionLink("Details", "viewWorkEffort", new { id=item.ID }) |
