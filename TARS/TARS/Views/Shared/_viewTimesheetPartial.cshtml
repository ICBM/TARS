                <td class="effortDescription" title="PCA code(s): @Html.Action("getWePcaCodesString", "User", new {weID = item.weID})">
                    @Html.HiddenFor(modelItem => item.workeffort)
                    @Html.DisplayFor(modelItem => item.workeffort)
