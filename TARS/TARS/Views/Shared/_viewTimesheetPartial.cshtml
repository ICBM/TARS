                        @Html.Hidden("wEffortID", item.weID)
                        @Html.Hidden("timeCode", item.timecode)
                        @Html.Hidden("hrsDate", (DateTime)ViewBag.timesheet.periodStart)
                        @Html.TextBox("addedHours", 0, new { @class = "dayCell" })
                    }
                </td>
