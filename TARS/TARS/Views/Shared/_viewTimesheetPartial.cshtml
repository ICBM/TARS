                        @Html.Hidden("hoursID", item.tueHours.ID)
                        @Html.TextBox("editedHours", item.tueHours.hours, new { @class = "dayCell" })
                    }
                    else
                    {
                        @Html.Hidden("wEffortID", item.weID)
                        @Html.Hidden("timeCode", item.timecode)
                        @Html.Hidden("hrsDate", (DateTime)ViewBag.timesheet.periodStart.AddDays(2))                             
                        @Html.TextBox("addedHours", 0, new { @class = "dayCell" })
                    }
                </td>
