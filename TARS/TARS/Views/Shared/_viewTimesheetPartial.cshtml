@model IEnumerable<TARS.Models.TimesheetRow>


<table class="timesheet">
    <tr>
        <th>
            WorkEffort
        </th>
        <th>
            TimeCode            
        </th>
        <th>
            SUN
        </th>
        <th>
            MON
        </th>
        <th>
            TUE
        </th>
        <th>
            WED
        </th>
        <th>
            THU
        </th>
        <th>
            FRI
