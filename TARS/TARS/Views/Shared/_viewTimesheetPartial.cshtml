                        @Html.Hidden("timeCode", item.timecode)
                        @Html.Hidden("hrsDate", (DateTime)ViewBag.timesheet.periodStart.AddDays(1))                            
                        @Html.TextBox("addedHours", 0, new { @class = "dayCell" })
