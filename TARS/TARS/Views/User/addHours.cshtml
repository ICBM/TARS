@model TARS.Models.Hours

@{
    ViewBag.Title = "addHours";
}

<h2>Add Hours</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>addHours</legend>

        <input data-val="true" data-val-number="The field we must be a number." data-val-required="The we field is required." id="we" name="we" type="hidden" value="@ViewBag.WorkEffortID" />

        <!--List of tasks in a dropdown, perhaps?-->
        <div class="editor-label">
            @Html.LabelFor(model => model.workEffort)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.workEffort)
            @Html.ValidationMessageFor(model => model.workEffort)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.hours)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.hours)
            @Html.ValidationMessageFor(model => model.hours)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <!--Will want to hide from users and default to false-->
        <div class="editor-label">
            @Html.LabelFor(model => model.approved)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.approved)
            @Html.ValidationMessageFor(model => model.approved)
        </div>

        <!-- will want to replace with an automatically generated time-->
        <div class="editor-label">
            @Html.LabelFor(model => model.timestamp)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.timestamp)
            @Html.ValidationMessageFor(model => model.timestamp)
        </div>

        <input id="creator" name="creator" type="hidden" value="@User.Identity.Name" />
        
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>   
}
