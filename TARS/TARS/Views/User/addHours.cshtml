@model TARS.Models.Hours

@{
    ViewBag.Title = "addHours";
}

<h2>Add Hours</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@if ((ViewBag.timesheetLockedFlag == false) || (ViewBag.adminFlag == true))
{
    using (Html.BeginForm())
    {    
        @Html.ValidationSummary(true)
        <fieldset>
            <input name="creator" type="hidden" value="@User.Identity.Name" />
            <input name="division" type="hidden" value="@ViewBag.division" />

            <div class="editor-label"><b>Division</b></div>
            <div class="editor-field">
                @Html.DropDownList("division", (List<SelectListItem>)ViewBag.divisionList, "--Select Division--")
            </div>

            <p>
            <div class="editor-label"><b>Choose Work Effort</b></div>
            <div class="editor-field">
                @Html.DropDownListFor(p => p.workEffortID, Enumerable.Empty<SelectListItem>(), "--Select Work Effort--")
            </div>
            </p>

            <p>
            <div class="editor-label"><b>Hours Worked</b></div>
            <div class="editor-field">
                @Html.EditorFor(model => model.hours)
                @Html.ValidationMessageFor(model => model.hours)
            </div>
            </p>
    
            <p>
            <div class="editor-label"><b>Description of work</b></div>
            <div class="editor-field">
                @Html.EditorFor(model => model.description)
                @Html.ValidationMessageFor(model => model.description)
            </div>
            </p>

            <p>
            <div class="editor-label"><b>Date </b>(and optional time)</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.timestamp)
                @Html.ValidationMessageFor(model => model.timestamp)
                @if (ViewBag.invalidTimestamp == true)
                {
                    <html>Not within the work effort's date range: 
                    <b>@Html.Action("getWeTimeBoundsString", new { id = Model.workEffortID })</b></html>
                }
            </div>
            </p>
                    
            <p>
                <input type="submit" value="Submit" />
            </p>
        </fieldset>   
    }
}
else
{
    <html><h3>Timesheet Is Locked</h3></html>
}

<div>
    @Html.ActionLink("Back to Timesheet", "viewTimesheet/")
</div>


<!-- Populate Work Effort dropdown according to division that was selected -->
<script type="text/javascript">
    $('#division').change(function () {
        var selectedDivision = $(this).val();
        $.getJSON('@Url.Action("jsonWorkEffortSelectList")', { division: selectedDivision }, function (workefforts) {
            var weSelect = $('#workEffortID');
            weSelect.empty();
            $.each(workefforts, function (index, we) {
                weSelect.append($('<option/>', {
                    value: we.value,
                    text: we.text
                }));
            });
        });
    });
</script>