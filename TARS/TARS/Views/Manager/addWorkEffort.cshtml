@model TARS.Models.WorkEffort

@{
    ViewBag.Title = "Create";
}

<h2>Add Work Effort 
@if (ViewBag.divisionName.Trim().Length > 0)
{
    <small><i>(@ViewBag.divisionName)</i></small>
}
</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label"><b>PCA Code</b></div>
        <div class="editor-field">
            @Html.DropDownList("pcaCode", new SelectList(ViewBag.pcaList, Model))
        </div>

        <p>
        <div class="editor-label"><b>Work Effort Description </b>(100 characters max)</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>
        </p>

        <p>
        <div class="editor-label"><b>Earnings Code</b></div>
        <div class="editor-field">
            @Html.DropDownList("earningsCode", (List<SelectListItem>)ViewBag.earnCodeSelectList)
        </div>
        </p>

        <p>
        <div class="editor-label"><b>Start Date</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.startDate)
            @Html.ValidationMessageFor(model => model.startDate)
        </div>
        </p>

        <p>
        <div class="editor-label"><b>End Date</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.endDate)
            @Html.ValidationMessageFor(model => model.endDate)
            @if (ViewBag.withinTimeBounds == false)
            {
                <html>Not within the PCA code's time bounds: <b>@Html.Action("showPcaTimeBounds", Model.pcaCode) </b></html>
            } 
        </div>
        </p>

        <p>
        <div class="editor-label"><b>Comments </b>(250 characters max)</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.comments)
            @Html.ValidationMessageFor(model => model.comments)
        </div>
        </p>
    
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "weManagement/")
</div>
