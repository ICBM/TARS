@model TARS.Models.Holidays

@{
    ViewBag.Title = "editHoliday";
}

<h2>Edit Holiday</h2>

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true)
    <fieldset>
        <p>
        <div class="editor-label"><b>Holiday Name</b></div>
        @Html.TextAreaFor(model => model.holidayName, 1, 40, null)
        @Html.ValidationMessageFor(model => model.holidayName)
        </p>

        <p>
        <div class="editor-label"><b>Date</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.date)
        </div>
        </p>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Holidays", "viewHolidays")
</div>

